from turtle import *

# screen size [-620,620] x [-300,300] (1920x1080)
# estimate of each date: 20 x 20
# space between date and the box
# space each calender by 60
def sq(n):
    for i in range(4):
        fd(n)
        left(90)
def calender(list_m):
    day = ["Mon","Tu","We","Th","Fr","Sa","Su"]
    for i in range(len(list_m)):
        if i % 7 == 0 and i != 0 :
            left(180)
            fd(25 * 7)
            right(90)
            fd(25)
            right(90)
        sq(25)
        fd(4)
        write(list_m[i], font=("Angsana New", 18, "normal"))
        fd(21)
    left(180)
    fd(25 * 7)
    right(90)
    fd(25)
    right(90)
    for i in range(len(day)):
        if i % 7 == 0 and i != 0 :
            left(180)
            fd(25 * 7)
            right(90)
            fd(25)
            right(90)
        sq(25)
        fd(4)
        if i == 0:
            write(day[i], font=("Angsana New", 12, "normal"))
            fd(21)
            continue
        write(day[i], font=("Angsana New", 16, "normal"))
        fd(21)
    left(180)
    fd(25 * 7)
    right(90)
    fd(25)
    right(90)


