    calender(date[n])
    for i in range(2):
        fd(25 * 7)
        left(90)
        fd(25)
        left(90)
    fd(50)
    write(f"{month[n - 1]} 2020", font=("Angsana New", 16, "normal"))

speed(0)
penup()
goto(-87,-87)
pendown()
calender_of_2020(9)
done()


